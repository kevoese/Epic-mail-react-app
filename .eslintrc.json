{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 9
  },
  "parser": "babel-eslint",
  "plugins": ["react"],
  "rules": {
    "no-undef": "off",
    "no-mixed-spaces-and-tabs": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "linebreak-style": ["error", "unix"],
    "react/prop-types": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
